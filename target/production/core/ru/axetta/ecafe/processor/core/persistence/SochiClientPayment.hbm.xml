<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.SochiClientPayment" table="CF_SochiClientPayments">
        <id name="paymentId" column="PaymentId" type="long"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.SochiClient"
                     column="ContractId" not-null="true" update="false"/>
        <property name="paymentSum" column="PaymentSum" type="long" not-null="true" update="false"/>
        <property name="paymentSumF" column="PaymentSumF" type="long" not-null="true" update="false"/>
        <property name="paymentTime" column="PaymentTime" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="terminalId" column="TerminalId" type="long" not-null="true" update="false"/>
        <property name="createTime" column="CreateTime" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
    </class>
</hibernate-mapping>


