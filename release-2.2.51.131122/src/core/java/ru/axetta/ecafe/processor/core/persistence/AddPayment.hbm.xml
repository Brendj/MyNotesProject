<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.AddPayment" table="CF_AddPayments">
        <id name="idOfAddPayment" column="IdOfAddPayment" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfAddPayment</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="contragentPayer" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentPayer"
                     not-null="true"/>
        <many-to-one name="contragentReceiver" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentReceiver"
                     not-null="true"/>
        <property name="summa" column="Summa" type="long" not-null="true"/>
        <property name="comment" column="Comment" type="string" not-null="false"/>
        <property name="fromDate" column="FromDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <property name="toDate" column="ToDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
    </class>
</hibernate-mapping>