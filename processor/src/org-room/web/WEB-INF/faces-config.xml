<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">


    <application>
        <locale-config>
            <default-locale>ru</default-locale>
        </locale-config>
    </application>

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    <application>
        <variable-resolver>
            org.springframework.web.jsf.DelegatingVariableResolver
        </variable-resolver>
    </application>

    <managed-bean>
        <display-name>orgRoomMainPage</display-name>
        <managed-bean-name>orgRoomMainPage</managed-bean-name>
        <managed-bean-class>ru.axetta.ecafe.processor.web.ui.OrgRoomMainPage</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!-- Конвертеры -->
    <converter>
        <description>Date to time converter</description>
        <converter-id>dateConverter</converter-id>
        <converter-class>ru.axetta.ecafe.processor.web.ui.converter.DateConverter</converter-class>
    </converter>

    <converter>
        <description>Full date to time converter</description>
        <converter-id>dateTimeConverter</converter-id>
        <converter-class>ru.axetta.ecafe.processor.web.ui.converter.DateTimeConverter</converter-class>
    </converter>

    <navigation-rule>
        <from-view-id>/index.jsp</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>