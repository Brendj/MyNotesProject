<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">

    <application>
        <locale-config>
            <default-locale>ru</default-locale>
        </locale-config>
    </application>

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    <application>
        <variable-resolver>
            org.springframework.web.jsf.DelegatingVariableResolver
        </variable-resolver>
    </application>


    <managed-bean>
        <managed-bean-name>adminPage</managed-bean-name>
        <managed-bean-class>
           ru.axetta.ecafe.processor.web.ui.admin.AdminPage
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <managed-bean>
        <display-name>clientRoomMainPage</display-name>
        <managed-bean-name>clientRoomMainPage</managed-bean-name>
        <managed-bean-class>ru.axetta.ecafe.processor.web.ui.ClientRoomMainPage</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <converter>
        <description>Timestamp converter with second accuracy</description>
        <converter-id>timeConverter</converter-id>
        <converter-class>ru.axetta.ecafe.processor.web.ui.converter.TimeConverter</converter-class>
    </converter>


    <converter>
        <description>Phone converter</description>
        <converter-id>phoneConverter</converter-id>
        <converter-class>ru.axetta.ecafe.processor.web.ui.converter.PhoneConverter</converter-class>
    </converter>

    <converter>
        <description>User functions converter</description>
        <converter-id>functionSetConverter</converter-id>
        <converter-class>ru.axetta.ecafe.processor.web.ui.option.user.FunctionSetConverter</converter-class>
    </converter>

    <navigation-rule>
        <from-view-id>/admin-page/index.jsp</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/admin-page/index.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>