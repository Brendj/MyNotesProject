<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.EnterEventSendInfo" table="CF_EnterEvents_Send_Info">
        <composite-id name="compositeIdOfEnterEventSendInfo" class="ru.axetta.ecafe.processor.core.persistence.CompositeIdOfEnterEventSendInfo">
            <key-property name="idOfEnterEvent" type="long" column="idOfEnterEvent"/>
            <key-property name="idOfOrg" type="long" column="IdOfOrg"/>
        </composite-id>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg"
                     not-null="true" update="false" insert="false" />
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="false" update="false" />
        <many-to-one name="card" class="ru.axetta.ecafe.processor.core.persistence.Card" column="IdOfCard"
                     not-null="false" update="false" />
        <one-to-one name="enterEvent" class="ru.axetta.ecafe.processor.core.persistence.EnterEvent"/>
        <property name="evtDateTime" column="EvtDateTime" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="sendToExternal" column="sendToExternal" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="directionType" column="directionType" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="responseCode" column="responseCode" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
    </class>
</hibernate-mapping>