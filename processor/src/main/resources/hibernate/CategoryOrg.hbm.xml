<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CategoryOrg" table="CF_CategoryOrg">
        <id name="idOfCategoryOrg" column="IdOfCategoryOrg" type="long">
            <generator class="identity"/>
        </id>
        <property name="categoryName" column="CategoryName" type="string" length="255" not-null="true"/>

        <!-- Cвязь многие ко многим между таблицами CategoryOrg и Org -->
        <set name="orgsInternal" lazy="false" table="CF_CategoryOrg_Orgs">
            <key column="IdOfCategoryOrg"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg"/>
        </set>

        <!-- Cвязь многие ко многим между таблицами CategoryOrg и DiscountRule -->
        <set name="discountRulesInternal" table="CF_DiscountRules_CategoryOrg">
            <key column="idOfCategoryOrg"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.DiscountRule" column="IdOfRule"/>
        </set>

    </class>
</hibernate-mapping>