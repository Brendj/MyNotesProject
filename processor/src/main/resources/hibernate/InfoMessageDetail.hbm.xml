<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.InfoMessageDetail" table="cf_info_message_details">
        <composite-id name="compositeIdOfInfoMessageDetail" class="ru.axetta.ecafe.processor.core.persistence.CompositeIdOfInfoMessageDetail">
            <key-property name="idOfInfoMessage" type="long" column="IdOfInfoMessage"/>
            <key-property name="idOfOrg" type="long" column="IdOfOrg"/>
