<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.GoodsBasicBasket" table="CF_Goods_BasicBasket">
        <id name="idOfBasicGood" column="IdOfBasicGood" type="long">
            <generator class="identity"/>
        </id>
        <property name="guid" column="Guid" type="string" not-null="true" update="false"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true" update="false"/>
        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="nameOfGood" column="NameOfGood" type="string" not-null="true" length="512"/>
        <property name="unitsScale" column="UnitsScale">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.distributedobjects.UnitScale</param>
                <param name="type">4</param>
            </type>
        </property>
        <property name="netWeight" column="NetWeight" type="long" not-null="true" />

        <set name="good" lazy="true" inverse="true">
            <key>
                <column name="IdOfBasicGood"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.products.Good"/>
        </set>

        <set name="goodBasicBasketPriceInternal" lazy="true" inverse="true">
            <key>
                <column name="IdOfBasicGood"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.products.GoodBasicBasketPrice" />
        </set>

        <set name="configurationProviders" table="cf_basicbasketgood_provider" lazy="true">
            <key column="idOfbasicGood"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.ConfigurationProvider" column="idOfConfigurationProvider"/>
        </set>

    </class>
</hibernate-mapping>
