<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodDiscount" table="cf_applications_for_food_discount">
        <id name="idOfAppDiscount" column="idofappdiscount" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="applicationForFood" class="ru.axetta.ecafe.processor.core.persistence.ApplicationForFood" column="idofapplicationforfood"
                     not-null="true" fetch="join"/>
        <property name="dtisznCode" column="DTISZNCode" type="integer"/>
        <set name="applicationForFoodHistories" inverse="true" cascade="all">
            <key column="idOfApplicationForFood"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodHistory"/>
        </set>
    </class>
</hibernate-mapping>
