<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.AccountRefund" table="CF_Account_Refund">
        <id name="idOfAccountRefund" column="IdOfAccountRefund" type="long">
            <generator class="identity"/>
        </id>
        <property name="createTime" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false"/>
        <property name="reason" column="Reason" type="string" update="true"/>
        <many-to-one name="createdBy" class="ru.axetta.ecafe.processor.core.persistence.User" column="CreatedBy"
                     not-null="true" update="false"/>
        <many-to-one name="transaction" class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction" column="IdOfTransaction"
                     not-null="true" update="false"/>
        <property name="refundSum" column="RefundSum" type="long" not-null="true" update="false"/>
    </class>
</hibernate-mapping>


