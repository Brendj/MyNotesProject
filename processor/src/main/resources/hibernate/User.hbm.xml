<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.User" table="CF_Users" optimistic-lock="version">
        <id name="idOfUser" column="IdOfUser" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">pooled-lo</param>
                <param name="increment_size">3</param>
                <param name="sequence_name">CF_Users_Id_Gen_seq</param>
            </generator>
        </id>
        <version name="version" column="Version" type="long"/>
        <property name="userName" column="UserName" type="string" length="64" unique="true" not-null="true"/>
        <property name="cypheredPassword" column="Password" type="string" length="128" not-null="true"/>
        <property name="phone" column="Phone" type="string" length="32" not-null="true"/>

        <property name="email" column="Email" type="string" length="128"/>

        <property name="idOfRole" column="idOfRole" type="integer"/>
        <property name="roleName" column="RoleName" type="string" length="128"/>

        <property name="updateTime" column="LastChange" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="lastEntryIP" column="LastEntryIP" type="string" length="15" not-null="false"/>
        <property name="lastEntryTime" column="LastEntryTime" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <property name="blocked" column="IsBlocked" type="boolean" not-null="true"/>
        <property name="deletedState" column="DeletedState" type="boolean" not-null="true"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lastSmsCode" column="LastSmsCode" type="string" length="10"/>
        <property name="smsCodeEnterDate" column="SmsCodeEnterDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="smsCodeGenerateDate" column="SmsCodeGenerateDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="needChangePassword" column="NeedChangePassword" type="boolean" not-null="true"/>
        <property name="region" column="Region" type="string" length="128" not-null="false"/>
        <property name="blockedUntilDate" column="BlockedUntilDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="passwordDate" column="PasswordDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="attemptNumber" column="AttemptNumber" type="integer"/>
        <property name="department" column="department" type="string" length="64" not-null="false" />
        <many-to-one name="person" class="ru.axetta.ecafe.processor.core.persistence.Person" column="idofperson" fetch="select" lazy="false"/>
        <property name="idOfGroup" column="IdOfGroup" type="long" />
        <property name="isGroup" column="isGroup" type="boolean" not-null="true"/>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="idoforg" fetch="select" lazy="proxy"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="idofclient" fetch="select"/>
        <property name="deleteDateForBlock" column="deleteDateForBlock" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="createdDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <many-to-one name="userCreate" column="idOfUserCreate" class="ru.axetta.ecafe.processor.core.persistence.User"/>
        <many-to-one name="userEdit" column="idOfUserEdit" class="ru.axetta.ecafe.processor.core.persistence.User"/>

        <set name="contragents" table="CF_UserContragents">
            <key column="IdOfUser"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.Contragent" column="IdOfContragent"/>
        </set>
        <set name="functionsInternal" table="CF_Permissions">
            <key column="IdOfUser"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.Function" column="IdOfFunction"/>
        </set>
        <set name="userOrgses" inverse="true">
            <key column="IdOfUser"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.UserOrgs"/>
        </set>
        <set name="sfcUserOrgs" inverse="true">
            <key column="IdOfUser"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.SfcUserOrgs"/>
        </set>
    </class>
</hibernate-mapping>


