<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.SecurityJournalBalance" table="cf_security_journal_balances">
        <id name="idOfJournalBalance" column="idOfJournalBalance" type="long">
            <generator class="identity"/>
        </id>
        <property name="eventType" column="EventType" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.SJBalanceTypeEnum</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="eventDate" column="EventDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="eventSource" column="EventSource" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.SJBalanceSourceEnum</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="isSuccess" column="IsSuccess" type="boolean" not-null="true"/>
        <property name="terminal" column="Terminal" type="string"/>
        <property name="protocol" column="Protocol" type="string"/>
        <property name="eventInterface" column="EventInterface" type="string"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     update="false"/>
        <many-to-one name="clientPayment" class="ru.axetta.ecafe.processor.core.persistence.ClientPayment" column="IdOfClientPayment"
                     update="false"/>
        <many-to-one name="order" class="ru.axetta.ecafe.processor.core.persistence.Order"
                     insert="false"
                     update="false">
            <column name="IdOfOrg"/>
            <column name="IdOfOrder"/>
        </many-to-one>
        <many-to-one name="accountTransaction" class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction" column="IdOfTransaction"
                     update="false"/>
        <property name="request" column="Request" type="string"/>
        <property name="clientAddress" column="ClientAddress" type="string"/>
        <property name="serverAddress" column="ServerAddress" type="string"/>
        <property name="certificate" column="Certificate" type="string"/>
        <property name="message" column="Message" type="string"/>
        <property name="idOfOrder" column="IdOfOrder" type="long" update="false"/>
        <property name="idOfOrg" column="IdOfOrg" type="long" update="false"/>
    </class>
</hibernate-mapping>