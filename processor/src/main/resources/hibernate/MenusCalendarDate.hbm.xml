<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.MenusCalendarDate" table="cf_menus_calendar_dates">
        <id name="idOfMenusCalendarDate" column="IdOfMenuscalendardate" type="long">
            <generator class="identity"/>
        </id>
        <property name="comment" column="comment" type="string" length="256" not-null="true" update="false"/>
        <many-to-one name="menusCalendar" class="ru.axetta.ecafe.processor.core.persistence.MenusCalendar" column="idofmenuscalendar"
                     not-null="true"/>
        <property name="date" column="date" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="isWeekend" column="isweekend" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
    </class>
</hibernate-mapping>


