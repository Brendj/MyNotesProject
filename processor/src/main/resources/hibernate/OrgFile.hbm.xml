<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.OrgFile" table="cf_orgfile" optimistic-lock="version">
        <id name="idOfOrgFile" column="IdOfOrgFile" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="orgOwner" class="ru.axetta.ecafe.processor.core.persistence.Org"
                     column="IdOfOrg" not-null="true" fetch="select"/>
        <property name="name" column="name" type="string" not-null="true"/>
        <property name="ext" column="ext" type="string" not-null="true"/>
        <property name="displayName" column="displayname" type="string" not-null="true"/>
        <property name="date" column="date" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="size" column="size" type="long"/>
    </class>
</hibernate-mapping>
