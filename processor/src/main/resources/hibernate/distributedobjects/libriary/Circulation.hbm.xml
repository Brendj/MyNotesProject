<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.libriary.Circulation" table="cf_circulations">
        <id name="globalId" column="IdOfCirculation" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <property name="globalVersionOnCreate" column="GlobalVersionOnCreate" type="long"/>
        <property name="globalVersion" column="globalVersion" type="long"/>
        <property name="orgOwner" column="OrgOwner" type="long"/>

        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="guid" column="GUID" type="string" length="36" not-null="true" unique="true"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="sendAll" column="SendAll">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.distributedobjects.SendToAssociatedOrgs</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <!-- End Global params -->

        <many-to-one name="issuable" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.libriary.Issuable" not-null="true"
                     column="idOfIssuable"/>

        <many-to-one name="parentCirculation" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.libriary.Circulation" not-null="false"
        column="IdOfParentCirculation"/>

        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false" fetch="select" lazy="proxy"/>

        <property name="issuanceDate" column="IssuanceDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="refundDate" column="RefundDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="realRefundDate" column="RealRefundDate"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="false"/>
        <property name="status" column="Status" type="integer" not-null="true" unique="false" optimistic-lock="true" lazy="false" generated="never" />

        <many-to-one name="exchangeOut" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.libriary.ExchangeOut" not-null="false"
                     column="idofexchangeout"/>

        <set name="circulationInternal" lazy="true" inverse="true">
            <key>
                <column name="IdOfCirculation"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.libriary.Circulation" />
        </set>

    </class>
</hibernate-mapping>