<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.DulDetail" table="CF_Dul_Detail">
        <id name="id" column="id" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">pooled-lo</param>
                <param name="increment_size">1</param>
                <param name="sequence_name">cf_dul_detail_id</param>
            </generator>
        </id>
        <property name="idMkDocument" column="idmkdocument" type="long" not-null="false"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false"/>
        <property name="documentTypeId" column="document_type_id" type="long" not-null="false"/>
        <property name="series" column="series" type="string" length="64" not-null="false"/>
        <property name="number" column="number" type="string" length="64" not-null="true"/>
        <property name="subdivisionCode" column="subdivision_code" type="string" length="64" not-null="false"/>
        <property name="issuer" column="issuer" type="string" length="64" not-null="false"/>
        <property name="issued" column="issued" type="string" length="64" not-null="false"/>
        <property name="expiration" column="expiration" type="string" length="64" not-null="false"/>
        <property name="createDate" column="createdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="lastUpdate" column="lastupdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" />
        <property name="deleteState" column="deletestate" type="java.lang.Boolean"/>
        <many-to-one name="dulGuide" class="ru.axetta.ecafe.processor.core.persistence.DulGuide" column="document_type_id" lazy="false" not-null="true"
                     update="false" insert="false"/>
    </class>
</hibernate-mapping>