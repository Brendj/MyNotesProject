<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.AccountTransfer" table="CF_Account_Transfers">
        <id name="idOfAccountTransfer" column="IdOfAccountTransfer" type="long">
            <generator class="identity"/>
        </id>
        <property name="createTime" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <many-to-one name="clientBenefactor" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClientBenefactor"
                     not-null="true" update="false"/>
        <many-to-one name="clientBeneficiary" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClientBeneficiary"
                     not-null="true" update="false"/>
        <property name="reason" column="Reason" type="string" update="true"/>
        <many-to-one name="createdBy" class="ru.axetta.ecafe.processor.core.persistence.User" column="CreatedBy"
                     not-null="true" update="false"/>
        <many-to-one name="transactionOnBenefactor" class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction" column="IdOfTransactionOnBenefactor"
                     not-null="true" update="false"/>
        <many-to-one name="transactionOnBeneficiary" class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction" column="IdOfTransactionOnBeneficiary"
                     not-null="true" update="false"/>
        <property name="transferSum" column="TransferSum" type="long" not-null="true" update="false"/>
    </class>
</hibernate-mapping>


