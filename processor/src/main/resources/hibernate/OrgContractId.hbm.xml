<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.OrgContractId" table="CF_Orgs_contract_ids" optimistic-lock="version">

        <id name="idOfOrg" column="IdOfOrg" type="long">
            <generator class="foreign">
                <param name="property">org</param>
            </generator>
        </id>
        <version name="version" column="Version" type="long"/>
        <one-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" constrained="true"/>
        <property name="lastClientContractId" column="LastClientContractId" type="long" not-null="true"/>
    </class>
</hibernate-mapping>


