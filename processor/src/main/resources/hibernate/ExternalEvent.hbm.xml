<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ExternalEvent" table="CF_ExternalEvents">
        <id name="idOfExternalEvent" column="IdOfExternalEvent" type="long">
            <generator class="identity"/>
        </id>
        <property name="orgCode" column="OrgCode" type="string" length="20"/>
        <property name="orgName" column="OrgName" type="string" length="256"/>
        <property name="orgShortName" column="orgShortName" type="string" length="256"/>
        <property name="enterName" column="EnterName" type="string" length="256"/>
        <property name="address" column="address" type="string" length="256"/>
        <property name="version" column="version" type="long" not-null="true"/>
        <property name="cardNo" column="CardNo" type="long" not-null="true" unique="true"/>
        <property name="cardType" column="CardType" type="integer" not-null="true"/>
        <property name="evtType" column="EvtType">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.ExternalEventType</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false" />
        <property name="evtDateTime" column="EvtDateTime" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="evtStatus" column="EvtStatus">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.ExternalEventStatus</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
    </class>
</hibernate-mapping>