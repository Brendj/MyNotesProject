<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtRefreshToken" table="cf_wt_refresh_token">
        <id name="hash">
            <column name="hash" sql-type="string" length="128"/>
        </id>

        <many-to-one name="user" class="ru.axetta.ecafe.processor.core.persistence.User">
            <column name="user_id"/>
        </many-to-one>

        <property name="lastSession">
            <column name="last_session" sql-type="date" not-null="true"/>
        </property>

    </class>
</hibernate-mapping>