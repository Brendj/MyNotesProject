<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CurrentPosition" table="CF_CurrentPositions" dynamic-update="true">
        <id name="idOfPosition" column="IdOfPosition" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">pooled-lo</param>
                <param name="increment_size">3</param>
                <param name="sequence_name">CF_CurrentPositions_Id_Gen_seq</param>
            </generator>
        </id>
        <many-to-one name="idOfContragentDebtor" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentDebtor"
                     not-null="true"/>
        <many-to-one name="idOfContragentCreditor" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentCreditor"
                     not-null="true"/>
        <property name="summa" column="Summa" type="long" not-null="true"/>
    </class>
</hibernate-mapping>