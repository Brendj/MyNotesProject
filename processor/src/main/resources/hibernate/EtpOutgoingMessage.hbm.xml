<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.EtpOutgoingMessage" table="cf_etp_outgoing_message">
        <id name="idOfEtpOutgoingMessage" column="idOfEtpOutgoingMessage" type="long">
            <generator class="identity"/>
        </id>
        <property name="etpMessageId" column="etpMessageId" type="string" length="32"/>
        <property name="etpMessagePayload" column="etpMessagePayload" type="string"/>
        <property name="createdDate" column="createdDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="lastUpdate" column="lastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="isSent" column="isSent"
                  type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="errorMessage" column="errorMessage" type="string"/>
    </class>
</hibernate-mapping>