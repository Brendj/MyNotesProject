<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ProductionCalendar" table="cf_production_calendar">
        <id name="idOfProductionCalendar" column="idOfProductionCalendar" type="long">
            <generator class="identity"/>
        </id>
        <property name="day" column="day" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="createdDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lastUpdate" column="lastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="flag" column="flag" type="int" not-null="true"/>
        <property name="version" column="version" type="long" not-null="true"/>
    </class>
</hibernate-mapping>