<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.questionary.Questionary" table="cf_qa_questionaries">
        <id name="idOfQuestionary" column="IdOfQuestionary" type="long">
            <generator class="identity"/>
        </id>
        <property name="questionName" column="QuestionName" type="string" length="90"/>
        <property name="question" column="Question" type="string" length="90"/>
        <property name="description" column="Description" type="string" length="255"/>
        <property name="status" column="Status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.questionary.QuestionaryStatus</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="questionaryType" column="Type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.questionary.QuestionaryType</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="viewDate" column="ViewDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="updatedDate" column="UpdatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>

        <set name="answers" table="cf_qa_answers" lazy="true" inverse="true" cascade="all-delete-orphan" fetch="select">
            <key>
                <column name="IdOfQuestionary" not-null="true" />
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.questionary.Answer" />
        </set>

        <set name="orgs" table="cf_qa_organization_questionary" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="IdOfQuestionary" not-null="true" />
            </key>
            <many-to-many entity-name="ru.axetta.ecafe.processor.core.persistence.Org">
                <column name="idoforg"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>