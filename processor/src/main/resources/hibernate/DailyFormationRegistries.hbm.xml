<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.DailyFormationRegistries"
           table="cf_daily_formation_registries" optimistic-lock="version">
        <id name="idOfRegistries" column="idofregistries" type="long">
            <generator class="identity"/>
        </id>
        <property name="generatedDate" column="generateddate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <many-to-one name="idOfContragent" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="idofcontragent"
                     not-null="false"/>
        <property name="contragentName" column="contragentname" type="string" length="255"/>

        <set name="dailyOrgRegistriesSet" table="cf_daily_org_registries" cascade="all" inverse="true">
            <key column="idofregistries" not-null="true"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.DailyOrgRegistries"/>
        </set>
    </class>
</hibernate-mapping>