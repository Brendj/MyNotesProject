<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ApplicationForFood" table="Cf_Applications_For_Food"
           optimistic-lock="version">
        <id name="idOfApplicationForFood" column="IdOfApplicationForFood" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" fetch="select"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="discountDateStart" column="DiscountDateStart" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="discountDateEnd" column="DiscountDateEnd" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="status" column="Status" type="ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodStatusType" not-null="true"/>
        <property name="mobile" column="Mobile" type="string" length="32" not-null="true"/>
        <property name="applicantName" column="ApplicantName" type="string" length="128" not-null="true"/>
        <property name="applicantSecondName" column="ApplicantSecondName" type="string" length="128"/>
        <property name="applicantSurname" column="ApplicantSurname" type="string" length="128" not-null="true"/>
        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="archived" column="Archived" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <property name="sendToAISContingent" column="SendToAISContingent" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <property name="serviceNumber" column="ServiceNumber" type="string" length="128" unique="true" not-null="true"/>
        <property name="archiveDate" column="ArchiveDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="creatorType" column="CreatorType" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodCreatorType</param>
            </type>
        </property>
        <property name="idOfDocOrder" column="IdOfDocOrder" type="string" length="128"/>
        <property name="docOrderDate" column="DocOrderDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="version" column="Version" type="long" not-null="true"/>
        <set name="applicationForFoodHistories" inverse="true" cascade="all">
            <key column="idOfApplicationForFood"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodHistory"/>
        </set>
        <set name="applicationForFoodDiscounts" inverse="true" cascade="all">
            <key column="idOfApplicationForFood"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.ApplicationForFoodDiscount"/>
        </set>

    </class>
</hibernate-mapping>
