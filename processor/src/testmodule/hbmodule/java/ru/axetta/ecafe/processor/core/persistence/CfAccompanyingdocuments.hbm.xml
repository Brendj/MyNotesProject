<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="ru.axetta.ecafe.processor.core.persistence.CfAccompanyingdocuments" table="cf_accompanyingdocuments"
           schema="public">
        <id name="idofaccompanyingdocument">
            <column name="idofaccompanyingdocument" sql-type="bigserial" length="19" not-null="true"/>
        </id>
        <property name="idoftypeofaccompanyingdocument">
            <column name="idoftypeofaccompanyingdocument" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="accompanyingdocumentnumber">
            <column name="accompanyingdocumentnumber" sql-type="varchar" length="32" not-null="true"/>
        </property>
        <property name="idofsource">
            <column name="idofsource" sql-type="int8" length="19"/>
        </property>
        <property name="globalversion">
            <column name="globalversion" sql-type="int8" length="19"/>
        </property>
        <property name="orgowner">
            <column name="orgowner" sql-type="int8" length="19"/>
        </property>
        <property name="deletedstate">
            <column name="deletedstate" sql-type="bool" length="1" not-null="true"/>
        </property>
        <property name="guid">
            <column name="guid" sql-type="varchar" length="36" not-null="true"/>
        </property>
        <property name="lastupdate">
            <column name="lastupdate" sql-type="int8" length="19"/>
        </property>
        <property name="deletedate">
            <column name="deletedate" sql-type="int8" length="19"/>
        </property>
        <property name="createddate">
            <column name="createddate" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="sendall">
            <column name="sendall" sql-type="int4" length="10"/>
        </property>
        <many-to-one name="cfSourcesByIdofsource" class="ru.axetta.ecafe.processor.core.persistence.CfSources">
            <column name="idofsource"/>
        </many-to-one>
        <many-to-one name="cfTypesofaccompanyingdocumentsByIdoftypeofaccompanyingdocument"
                     class="ru.axetta.ecafe.processor.core.persistence.CfTypesofaccompanyingdocuments">
            <column name="idoftypeofaccompanyingdocument" not-null="true"/>
        </many-to-one>
        <set name="cfKsu1RecordsesByIdofaccompanyingdocument" inverse="true">
            <key>
                <column name="accompanyingdocument"/>
            </key>
            <one-to-many not-found="ignore" class="ru.axetta.ecafe.processor.core.persistence.CfKsu1Records"/>
        </set>
    </class>
</hibernate-mapping>