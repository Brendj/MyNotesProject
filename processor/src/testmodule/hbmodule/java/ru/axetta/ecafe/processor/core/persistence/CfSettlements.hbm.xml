<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.axetta.ecafe.processor.core.persistence.CfSettlements" table="cf_settlements" schema="public">
        <id name="idofsettlement">
            <column name="idofsettlement" sql-type="int8" length="19" not-null="true"/>
        </id>
        <property insert="false" update="false" name="idofcontragentpayer">
            <column name="idofcontragentpayer" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property insert="false" update="false" name="idofcontragentreceiver">
            <column name="idofcontragentreceiver" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="createddate">
            <column name="createddate" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="paymentdate">
            <column name="paymentdate" sql-type="int8" length="19"/>
        </property>
        <property name="paymentdoc">
            <column name="paymentdoc" sql-type="varchar" length="128"/>
        </property>
        <property name="summa">
            <column name="summa" sql-type="int8" length="19" not-null="true"/>
        </property>
        <many-to-one name="cfContragentsByIdofcontragentpayer"
                     class="ru.axetta.ecafe.processor.core.persistence.CfContragents">
            <column name="idofcontragentpayer" not-null="true"/>
        </many-to-one>
        <many-to-one name="cfContragentsByIdofcontragentreceiver"
                     class="ru.axetta.ecafe.processor.core.persistence.CfContragents">
            <column name="idofcontragentreceiver" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>