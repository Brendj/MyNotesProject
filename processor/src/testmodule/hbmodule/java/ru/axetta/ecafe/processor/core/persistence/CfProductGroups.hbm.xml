<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="ru.axetta.ecafe.processor.core.persistence.CfProductGroups" table="cf_product_groups" schema="public">
        <id name="idofproductgroups">
            <column name="idofproductgroups" sql-type="bigserial" length="19" not-null="true"/>
        </id>
        <property name="nameofgroup">
            <column name="nameofgroup" sql-type="varchar" length="512" not-null="true"/>
        </property>
        <property name="guid">
            <column name="guid" sql-type="varchar" length="36" not-null="true"/>
        </property>
        <property name="globalversion">
            <column name="globalversion" sql-type="int8" length="19"/>
        </property>
        <property name="deletedstate">
            <column name="deletedstate" sql-type="bool" length="1" not-null="true"/>
        </property>
        <property name="classificationcode">
            <column name="classificationcode" sql-type="varchar" length="32"/>
        </property>
        <property name="idofconfigurationprovider">
            <column name="idofconfigurationprovider" sql-type="int8" length="19"/>
        </property>
        <property name="orgowner">
            <column name="orgowner" sql-type="int8" length="19"/>
        </property>
        <property name="createddate">
            <column name="createddate" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="lastupdate">
            <column name="lastupdate" sql-type="int8" length="19"/>
        </property>
        <property name="deletedate">
            <column name="deletedate" sql-type="int8" length="19"/>
        </property>
        <property name="sendall">
            <column name="sendall" sql-type="int4" length="10"/>
        </property>
        <set name="cfDishProhibitionsesByIdofproductgroups" inverse="true">
            <key>
                <column name="idofproductgroups"/>
            </key>
            <one-to-many not-found="ignore" class="ru.axetta.ecafe.processor.core.persistence.CfDishProhibitions"/>
        </set>
        <set name="cfProductsesByIdofproductgroups" inverse="true">
            <key>
                <column name="idofproductgroups" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="ru.axetta.ecafe.processor.core.persistence.CfProducts"/>
        </set>
    </class>
</hibernate-mapping>