<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="ru.axetta.ecafe.processor.core.persistence.CfCalls" table="cf_calls" schema="public">
        <id name="idofcall">
            <column name="idofcall" sql-type="int8" length="19" not-null="true"/>
        </id>
        <property name="idofclient">
            <column name="idofclient" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="calltime">
            <column name="calltime" sql-type="int8" length="19" not-null="true"/>
        </property>
        <property name="reason">
            <column name="reason" sql-type="varchar" length="1024" not-null="true"/>
        </property>
        <property name="calltype">
            <column name="calltype" sql-type="int4" length="10" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="int4" length="10" not-null="true"/>
        </property>
        <many-to-one name="cfClientsByIdofclient" class="ru.axetta.ecafe.processor.core.persistence.CfClients">
            <column name="idofclient" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>