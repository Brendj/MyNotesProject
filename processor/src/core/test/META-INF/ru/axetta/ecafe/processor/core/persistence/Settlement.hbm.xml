<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Settlement" table="CF_Settlements">
        <id name="idOfSettlement" column="IdOfSettlement" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfSettlement</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="idOfContragentPayer" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentPayer"
                     not-null="true"/>
        <many-to-one name="idOfContragentReceiver" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragentReceiver"
                     not-null="true"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="paymentDate" column="PaymentDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <property name="paymentDoc" column="PaymentDoc" type="string" length="128" not-null="false"/>
        <property name="summa" column="Summa" type="long" not-null="true"/>
    </class>
</hibernate-mapping>