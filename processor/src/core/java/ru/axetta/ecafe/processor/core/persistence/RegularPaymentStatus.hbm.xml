<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.RegularPaymentStatus" table="cf_regularpayment_status">
        <id name="idOfRegularPaymentStatus" column="idofregularpaymentstatus" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="regularPayment" class="ru.axetta.ecafe.processor.core.persistence.regularPaymentSubscription.RegularPayment"
                     column="IdOfRegularPayment" not-null="true" fetch="join"/>
        <property name="errorCode" column="errorCode" type="integer"/>
        <property name="description" column="description" type="string" length="255"/>
        <property name="statusDate" column="statusdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="createdDate" column="createddate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
    </class>
</hibernate-mapping>
