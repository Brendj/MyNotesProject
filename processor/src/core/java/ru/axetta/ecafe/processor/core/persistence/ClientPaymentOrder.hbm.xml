<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ClientPaymentOrder" table="CF_ClientPaymentOrders">
        <id name="idOfClientPaymentOrder" column="IdOfClientPaymentOrder" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfClientPaymentOrder</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="contragent" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragent"
                     not-null="true" update="false"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false"/>
        <property name="paymentMethod" column="PaymentMethod" type="integer" not-null="true" update="false"/>
        <property name="orderStatus" column="OrderStatus" type="integer" not-null="true"/>
        <property name="paySum" column="PaySum" type="long" not-null="true" update="false"/>
        <property name="contragentSum" column="ContragentSum" type="long" not-null="true" update="false"/>
        <property name="createTime" column="CreateTime" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="idOfPayment" column="IdOfPayment" type="string" length="128" not-null="true"/>
        <set name="clientPaymentsInternal" inverse="true" cascade="all">
            <key column="IdOfClientPaymentOrder"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.ClientPayment"/>
        </set>
    </class>
</hibernate-mapping>


