<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Circul" table="CF_Circul">
        <id name="idOfCircul" column="IdOfCircul" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfCircul</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="publ" class="ru.axetta.ecafe.processor.core.persistence.Publ" not-null="true"
                     column="idofpubl"/>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" not-null="true"
                     column="idoforg"/>

        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="idofclient"
                     not-null="true"/>

        <property name="issuanceDate" column="IssuanceDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="refundDate" column="RefundDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="realRefundDate" column="RealRefundDate"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="false"/>
        <property name="quantity" column="quantity" type="integer" not-null="true"/>
    </class>
</hibernate-mapping>