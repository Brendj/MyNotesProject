<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.SecurityJournalProcess" table="CF_Security_Journal_Processes" optimistic-lock="version">
        <id name="idOfJournalProcess" column="idofjournalprocess" type="long">
            <generator class="identity" />
        </id>
        <property name="eventType" column="eventtype" type="integer" not-null="true" />
        <property name="eventClass" column="eventclass" type="integer" not-null="true" />
        <property name="eventDate" column="eventdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="success" column="issuccess" type="boolean" not-null="true"/>
        <property name="serverAddress" column="serveraddress" type="string"/>
        <many-to-one name="user" class="ru.axetta.ecafe.processor.core.persistence.User" column="idofuser" not-null="false" />
    </class>
</hibernate-mapping>