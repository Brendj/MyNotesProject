<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CardActivity" table="cf_card_activity">
        <id name = "idOfCardActivity" column="idOfCardActivity" type="long">
            <generator class="identity"/>
        </id>
        <property name="idOfCard" column="idOfCard" type="long" not-null="true"/>
        <property name="lastEnterEvent" column="lastEnterEvent" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lastOrder" column="lastOrder" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lastUpdate" column="lastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
    </class>
</hibernate-mapping>


