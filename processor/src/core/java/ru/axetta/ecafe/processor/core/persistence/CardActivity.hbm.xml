<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CardActivity" table="cf_card_activity">
        <id name = "idOfCardActivity" column="idOfCardActivity" type="long">
            <generator class="identity"/>
        </id>
        <property name="idOfCard" column="idOfCard" type="long" not-null="true"/>
        <property name="lastUpdate" column="lastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="type" column="type" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.CardActivityType</param>
                <param name="type">4</param>
            </type>
        </property>
    </class>
</hibernate-mapping>


