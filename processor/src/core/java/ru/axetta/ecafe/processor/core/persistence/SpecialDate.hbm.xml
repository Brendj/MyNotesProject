<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.SpecialDate" table="cf_specialdates">
        <id name="idOfSpecialDate" column="IdOfSpecialDate" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfSpecialDate</param>
                <param name="max_lo">32</param>
            </generator>
        </id>
        <property name="idOfOrg" type="long" column="IdOfOrg" not-null="true"/>
        <property name="date" type="ru.axetta.ecafe.processor.core.persistence.DateType" column="date" not-null="true"/>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg"
                     not-null="true" insert="false" update="false"/>
        <property name="isWeekend" column="isweekend" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>
        <property name="deleted" column="deleted" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>
        <property name="version" column="version" type="long" not-null="true"/>
        <property name="comment" column="comment" type="string" not-null="true"/>
        <property name="idOfClientGroup" column="idofclientgroup" type="long"/>
        <many-to-one name="orgOwner" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrgOwner" not-null="true"/>
    </class>
</hibernate-mapping>


