<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.SudirToken" table="CF_Sudir_Tokens">

        <id name="access_token" column="access_token" type="string" length="64"/>
        <property name="token_type" column="token_type" type="string" length="64" not-null="true"/>
        <property name="expires_in" column="expires_in" type="integer" not-null="true"/>
        <property name="scope" column="scope" type="string" length="64" not-null="true"/>
        <property name="refresh_token" column="refresh_token" type="string" length="128" not-null="true"/>
        <property name="createdDate" column="createdDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>

    </class>
</hibernate-mapping>


