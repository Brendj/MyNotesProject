<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Accessory" table="cf_org_accessories">
        <cache usage="transactional"/>
        <id name="idOfAccessory" column="IdOfAccessory" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfAccessory</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <property name="idOfSourceOrg" column="IdOfSourceOrg" type="long" not-null="true" update="false"/>
        <property name="idOfTargetOrg" column="IdOfTargetOrg" type="long" not-null="true"/>
        <property name="accessoryType" column="AccessoryType" type="integer" not-null="true"/>
        <property name="accessoryNumber" column="AccessoryNumber" type="string" length="40" not-null="true"/>
        <property name="usedSinceSeptember" column="UsedSinceSeptember" type="boolean" not-null="true"/>
    </class>
</hibernate-mapping>


