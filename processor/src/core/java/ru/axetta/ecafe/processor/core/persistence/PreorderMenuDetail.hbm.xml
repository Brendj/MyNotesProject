<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.PreorderMenuDetail" table="cf_preorder_menudetail">
        <id name="idOfPreorderMenuDetail" column="IdOfPreorderMenuDetail" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client"
                     column="IdOfClient" not-null="true" fetch="select"/>
        <property name="amount" column="amount" type="integer"/>
        <property name="preorderDate" column="preorderDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="deletedState" column="deletedState" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <property name="guid" column="guid" type="string" length="36" not-null="true"/>
        <property name="armIdOfMenu" column="armidofmenu" type="long" />
        <property name="menuDetailName" column="menudetailname" type="string" length="512"/>
        <property name="menuDetailPrice" column="menudetailprice" type="long"/>
        <property name="itemCode" column="itemcode" type="string" length="32"/>
        <many-to-one name="preorderComplex" class="ru.axetta.ecafe.processor.core.persistence.PreorderComplex"
                     column="IdOfPreorderComplex" not-null="true" fetch="select" />
        <property name="state" column="state">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.PreorderState</param>
            </type>
        </property>
        <property name="idOfGoodsRequestPosition" column="idofgoodsrequestposition" type="long"/>
        <many-to-one name="regularPreorder" class="ru.axetta.ecafe.processor.core.persistence.RegularPreorder"
                     column="IdOfRegularPreorder" fetch="select"/>
    </class>
</hibernate-mapping>
