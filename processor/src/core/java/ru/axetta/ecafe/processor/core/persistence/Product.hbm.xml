<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Product" table="cf_product" optimistic-lock="version">
        <id name="idOfProduct" column="idofproduct" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">idofproduct</param>
                <param name="max_lo">0</param>
            </generator>
        </id>
        <!--<version name="version" column="version" type="long"/>-->
        <property name="name" column="nameofproduct" type="string" length="256"/>
        <property name="grossMass" column="grossmass" type="float" />
        <property name="netMass" column="netmass" type="float" />
    </class>
</hibernate-mapping>
