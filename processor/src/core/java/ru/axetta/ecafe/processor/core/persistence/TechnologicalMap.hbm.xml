<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.TechnologicalMap" table="cf_technologicalMap" optimistic-lock="version">
        <id name="idOfTechnologicalMap" column="idoftechnologicalmap" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">idoftechnologicalmap</param>
                <param name="max_lo">0</param>
            </generator>
        </id>

        <property name="name" column="nameoftechnologicalmap" type="string" length="128" />
        <property name="proteins" column="proteins" type="float" />
        <property name="carbohydrates" column="carbohydrates" type="float" />
        <property name="fats" column="fats" type="float" />
        <property name="ca" column="ca" type="float" />
        <property name="mg" column="mg" type="float" />
        <property name="p" column="p" type="float" />
        <property name="fe" column="fe" type="float" />
        <property name="energyValue" column="energyvalue" type="float" />
        <property name="a" column="a" type="float" />
        <property name="b1" column="b1" type="float" />
        <property name="b2" column="b2" type="float" />
        <property name="pp" column="pp" type="float" />
        <property name="c" column="c" type="float" />
        <property name="e" column="e" type="float" />
        <property name="technologyOfpreparation" column="technologyofpreparation" type="java.lang.String" />
        <property name="termOfRealization" column="termofrealization" type="integer" />

        <list name="products" table="cf_products">
            <key column="idOfTechnologicalMap"/>
            <list-index column="index"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Products" />
        </list>
    </class>
</hibernate-mapping>
