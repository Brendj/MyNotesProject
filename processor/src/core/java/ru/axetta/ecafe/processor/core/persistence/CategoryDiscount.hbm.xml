<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CategoryDiscount" table="CF_CategoryDiscounts">
        <id name="idOfCategoryDiscount" column="IdOfCategoryDiscount" type="long">
             <!--
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfCategoryDiscount</param>
                <param name="max_lo">10</param>
            </generator>
              -->
        </id>
        <property name="categoryName" column="CategoryName" type="string" length="100" not-null="true" />
        <property name="description" column="Description" type="string" length="100" not-null="true" />
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="false" />
        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" />
        <property name="orgType" column="OrganizationType" type="integer" not-null="true"/>

        <property name="discountRules" column="DiscountRules" type="string" length="60" not-null="true"/>

        <property name="categoryType" column="CategoryType">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.CategoryDiscountEnumType</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>

        <!-- Cвязь многие ко многим между таблицами DiscountRules и CategoryDiscountRule -->
        <set name="discountRulesInternal" table="CF_DiscountRules_CategoryDiscounts" >
            <key column="IdOfCategoryDiscount"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.DiscountRule" column="IdOfRule"/>
        </set>

        <!-- Cвязь многие ко многим между таблицами Client и CategoryDiscountRule -->
        <set name="clientsInternal" table="CF_Clients_CategoryDiscounts" inverse="true">
            <key column="IdOfCategoryDiscount"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"/>
        </set>

        <set name="categoriesDiscountDSZN" table="CF_CategoryDiscounts_DSZN" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="idOfCategoryDiscount" not-null="false" />
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.CategoryDiscountDSZN" />
        </set>

        <set name="wtDiscountRules" table="cf_wt_discountrules_categorydiscount" inverse="true" lazy="true">
            <key column="IdOfCategoryDiscount"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtDiscountRule" column="idOfRule"/>
        </set>

        <property name="blockedToChange" column="blockedToChange" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>

        <property name="eligibleToDelete" column="eligibleToDelete" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>

        <property name="deletedState" column="deletedState" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>
        <property name="deleteDate" column="deleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="false" />


    </class>
</hibernate-mapping>