<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtOrgGroup" table="cf_wt_org_groups">
        <cache usage="transactional"/>
        <id name="idOfOrgGroup">
            <column name="idOfOrgGroup" sql-type="long"/>
        </id>
        <property name="nameOfOrgGroup">
            <column name="nameOfOrgGroup" sql-type="varchar(128)" length="128"/>
        </property>
        <property name="createDate">
            <column name="createDate" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        </property>
        <property name="lastUpdate">
            <column name="lastUpdate" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        </property>
        <property name="deleteState">
            <column name="deleteState" sql-type="integer"/>
        </property>
        <property name="version">
            <column name="version" sql-type="long"/>
        </property>
        <many-to-one name="createdUser" class="ru.axetta.ecafe.processor.core.persistence.User">
            <column name="create_by_id"/>
        </many-to-one>
        <many-to-one name="updatedUser" class="ru.axetta.ecafe.processor.core.persistence.User">
            <column name="update_by_id"/>
        </many-to-one>

        <one-to-one name="contragent" class="ru.axetta.ecafe.processor.core.persistence.Contragent" cascade="all"/>

        <set name="wtComplexList" inverse="true" cascade="all" lazy="true">
            <key>
                <column name="idOfOrgGroup"/>
                <column name="idOfComplex"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtComplex"/>
        </set>

        <set name="wtMenuList" inverse="true" cascade="all" lazy="true" order-by="resolutionDateTime">
            <key>
                <column name="idOfMenu"/>
                <column name="idOfComplex"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtMenu"/>
        </set>

        <set name="orgs" lazy="false" table="cf_wt_org_group_relations">
            <key column="idOfOrgGroup"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg"/>
        </set>

    </class>
</hibernate-mapping>