            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.distributedobjects.SendToAssociatedOrgs</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <!-- End Global params -->
        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="idOfOrder" column="IdOfOrder" type="long"/>

        <many-to-one name="groupPaymentConfirm"
                     class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.payment.confirm.GroupPaymentConfirm" cascade="all" lazy="false">
            <column name="IdOfGroupPaymentConfirm" not-null="true" />
        </many-to-one>



    </class>
</hibernate-mapping>