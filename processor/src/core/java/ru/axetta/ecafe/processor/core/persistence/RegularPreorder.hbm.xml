<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.RegularPreorder" table="cf_regular_preorders">
        <id name="idOfRegularPreorder" column="IdOfRegularPreorder" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfRegularPreorder</param>
                <param name="max_lo">32</param>
            </generator>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client"
                     column="IdOfClient" not-null="true" fetch="select"/>
        <property name="idOfComplex" column="idofcomplex" type="integer"/>
        <property name="itemCode" column="itemCode" type="string" length="32"/>
        <property name="amount" column="amount" type="integer" not-null="true"/>
        <property name="startDate" column="startDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="endDate" column="endDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="itemName" column="itemName" type="string" length="256"/>
        <property name="price" column="price" type="long" not-null="true"/>
        <property name="monday" column="monday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="tuesday" column="tuesday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="wednesday" column="wednesday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="thursday" column="thursday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="friday" column="friday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="saturday" column="saturday" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="createdDate" column="createddate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="lastUpdate" column="lastupdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="deletedState" column="deletedState" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="mobile" column="mobile" type="string" length="32"/>
        <property name="state" column="state">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.RegularPreorderState</param>
            </type>
        </property>
    </class>
</hibernate-mapping>
