<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.balance.leaving.BalanceLeaving" table="CF_Balance_Leaving">
        <id name="idOfBalanceLeaving" column="idofbalanceleaving" type="long">
            <generator class="identity"/>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="idOfClient"
                     not-null="true" update="false"/>
        <property name="datePacketProcessing" column="datePacketProcessing" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="beforeReduceBalance" column="beforeReduceBalance" type="long" update="false"/>
        <property name="finalBalance" column="finalBalance" type="long" update="false"/>
    </class>
</hibernate-mapping>