<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.StateChange" table="cf_state_changes">
        <id name="globalId" column="IdOfStateChange" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <property name="globalVersion" column="GlobalVersion" type="long"/>
        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="guid" column="GUID" type="string" length="36" not-null="true" unique="true"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
        not-null="true" update="false"/>
        <property name="sendAll" column="SendAll" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <!-- End Global params -->

        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="date" column="DateOfStateChange" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="stateFrom" column="StateFrom" type="long" not-null="true"/>
        <property name="stateTo" column="StateTo" type="long" not-null="true"/>

        <many-to-one name="wayBill" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.WayBill" fetch="select" lazy="false">
            <column name="IdOfWayBill" not-null="false" />
        </many-to-one>

        <many-to-one name="internalDisposingDocument" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.InternalDisposingDocument" fetch="select" lazy="false">
            <column name="IdOfInternalDisposingDocument" not-null="false" />
        </many-to-one>

        <many-to-one name="internalIncomingDocument" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.InternalIncomingDocument" fetch="select" lazy="false">
            <column name="IdOfInternalIncomingDocument" not-null="false" />
        </many-to-one>

        <many-to-one name="goodRequest" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.GoodRequest" fetch="select" lazy="false">
            <column name="IdOfGoodsRequest" not-null="false" />
        </many-to-one>

        <many-to-one name="staff" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.Staff" fetch="select" lazy="false">
            <column name="IdOfStaff" not-null="true" />
        </many-to-one>



    </class>
</hibernate-mapping>
