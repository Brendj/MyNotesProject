<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Notification" table="CF_Notifications" mutable="false">
        <id name="idOfNotification" column="IdOfNotification" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfNotification</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false"/>
        <property name="notificationTime" column="NotificationTime"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="notificationType" column="NotificationType" type="integer" not-null="true" update="false"/>
        <property name="notificationText" column="NotificationText" type="string" length="1024" not-null="true"
                  update="false"/>
    </class>
</hibernate-mapping>


