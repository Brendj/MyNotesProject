<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ReportHandleRule" table="CF_ReportHandleRules">
        <id name="idOfReportHandleRule" column="IdOfReportHandleRule" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfReportHandleRule</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <property name="ruleName" column="RuleName" type="string" length="64" not-null="true"/>
        <property name="documentFormat" column="DocumentFormat" type="int" not-null="true"/>
        <property name="subject" column="Subject" type="string" length="128" not-null="true"/>
        <property name="route0" column="Route0" type="string" length="128" not-null="true"/>
        <property name="route1" column="Route1" type="string" length="128"/>
        <property name="route2" column="Route2" type="string" length="128"/>
        <property name="route3" column="Route3" type="string" length="128"/>
        <property name="route4" column="Route4" type="string" length="128"/>
        <property name="route5" column="Route5" type="string" length="128"/>
        <property name="route6" column="Route6" type="string" length="128"/>
        <property name="route7" column="Route7" type="string" length="128"/>
        <property name="route8" column="Route8" type="string" length="128"/>
        <property name="route9" column="Route9" type="string" length="128"/>
        <property name="remarks" column="Remarks" type="string" length="1024"/>
        <property name="enabled" column="Enabled" type="ru.axetta.ecafe.processor.core.persistence.BoolType"
                  not-null="true"/>
        <set name="ruleConditionsInternal" inverse="true" cascade="all">
            <key column="IdOfReportHandleRule"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.RuleCondition"/>
        </set>
    </class>
</hibernate-mapping>


