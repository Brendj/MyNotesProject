<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.LinkingToken" table="cf_linking_tokens">
        <id name="idOfLinkingToken" column="IdOfLinkingToken" type="long">
            <generator class="identity"/>
        </id>
        <property name="idOfClient" column="IdOfClient" type="long"/>
        <property name="token" column="Token" type="string" length="128" not-null="true"/>
    </class>
</hibernate-mapping>


