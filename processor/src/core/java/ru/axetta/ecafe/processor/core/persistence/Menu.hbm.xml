<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Menu" table="CF_Menu">
        <id name="idOfMenu" column="IdOfMenu" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfMenu</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg" not-null="true"
                     update="false"/>
        <property name="menuDate" column="MenuDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="createTime" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="menuSource" column="MenuSource" type="int" not-null="true" update="false"/>
        <property name="flags" column="Flags" type="int" not-null="true" update="true"/>
        <set name="menuDetailsInternal" inverse="true" cascade="all">
            <key column="IdOfMenu"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.MenuDetail"/>
        </set>
    </class>
</hibernate-mapping>


