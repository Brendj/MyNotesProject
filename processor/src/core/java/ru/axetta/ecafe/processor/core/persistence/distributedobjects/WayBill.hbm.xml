<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.WayBill" table="cf_waybills">
        <id name="globalId" column="IdOfWayBill" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <property name="globalVersion" column="GlobalVersion" type="long"/>
        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="guid" column="GUID" type="string" length="36" not-null="true" unique="true"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="sendAll" column="SendAll" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <!-- End Global params -->

        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="number" column="NumberOfWayBill" type="string" length="128" not-null="true"/>
        <property name="dateOfWayBill" column="DateOfWayBill" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="state" column="State" type="integer" not-null="true"/>
        <property name="shipper" column="Shipper" type="string" length="128" not-null="true"/>
        <property name="receiver" column="Receiver" type="string" length="128" not-null="true"/>

        <many-to-one name="staff" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.Staff" fetch="select" lazy="false">
            <column name="IdOfStaff" not-null="true" />
        </many-to-one>

        <many-to-one name="actOfWaybillDifference" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.ActOfWaybillDifference" fetch="select" lazy="false">
            <column name="IdOfActOfDifference" not-null="true" />
        </many-to-one>

    </class>
</hibernate-mapping>
