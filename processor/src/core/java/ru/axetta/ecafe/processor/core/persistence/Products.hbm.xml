<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Products" table="cf_products" optimistic-lock="version">
        <id name="idOfProducts" column="idofproducts" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">idOfProducts</param>
                <param name="max_lo">0</param>
            </generator>
        </id>
        <!--<version name="version" column="version" type="long"/>-->
        <property name="idOfTechnologicalMap" column="idoftechnologicalmap" type="long" />
        <property name="index" column="index" type="integer" />
        <many-to-one name="product1" column="idofproduct1" class="ru.axetta.ecafe.processor.core.persistence.Product" />
        <many-to-one name="product2" column="idofproduct2" class="ru.axetta.ecafe.processor.core.persistence.Product" />
        <many-to-one name="product3" column="idofproduct3" class="ru.axetta.ecafe.processor.core.persistence.Product" />
    </class>
</hibernate-mapping>