<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ConfigurationProvider" table="cf_provider_configurations">
        <id name="idOfConfigurationProvider" column="idofconfigurationprovider" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">idOfConfigurationProvider</param>
                <param name="max_lo">0</param>
            </generator>
        </id>

        <property name="name" column="name" type="string" length="64" not-null="true"/>

        <set name="products" lazy="true" cascade="all">
            <key>
                <column name="idofconfigurationprovider"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.Product"/>
        </set>
    </class>
</hibernate-mapping>