<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.ProductGuide" table="cf_product_guide" optimistic-lock="version">
        <id name="globalId" column="idofproductguide" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">idOfProductGuide</param>
                <param name="max_lo">0</param>
            </generator>
        </id>
        <version name="globalVersion" column="version" type="long"/>
        <property name="idOfOrg" column="idOfOrg" type="long"/>
        <property name="editTime" column="edit_date" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteTime" column="delete_date" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createTime" column="create_date" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="status" column="deleted" type="boolean"/>


        <property name="code" column="code" type="string" length="16"/>
        <property name="fullName" column="full_name" type="string" length="1024"/>
        <property name="okpCode" column="okp_code" type="string" length="32"/>
        <property name="productName" column="product_name" type="string" length="512"/>
        <many-to-one name="userCreate" column="idofusercreate" class="ru.axetta.ecafe.processor.core.persistence.User" update="false"/>
        <many-to-one name="userDelete" column="idofuserdelete" class="ru.axetta.ecafe.processor.core.persistence.User" />
        <many-to-one name="userEdit" column="idofuseredit" class="ru.axetta.ecafe.processor.core.persistence.User" />
        <property name="idofconfigurationprovider" column="idofconfigurationprovider" type="long"/>

    </class>
</hibernate-mapping>