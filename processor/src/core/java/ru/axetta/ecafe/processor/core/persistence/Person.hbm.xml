<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Person" table="CF_Persons">
        <!--<cache usage="transactional"/>-->
        <id name="idOfPerson" column="IdOfPerson" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">pooled-lo</param>
                <param name="increment_size">3</param>
                <param name="sequence_name">CF_Persons_Id_Gen_seq</param>
            </generator>
        </id>
        <property name="firstName" column="FirstName" type="string" length="64" not-null="true"/>
        <property name="surname" column="Surname" type="string" length="128" not-null="true"/>
        <property name="secondName" column="SecondName" type="string" length="128" not-null="true"/>
        <property name="idDocument" column="IDDocument" type="string" length="128"/>
        <set name="contragentsInternal" inverse="true" cascade="all">
            <key column="IdOfContactPerson"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Contragent"/>
        </set>
        <set name="orgsInternal" inverse="true" cascade="all">
            <key column="IdOfOfficialPerson"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Org"/>
        </set>
        <set name="clientsInternal" inverse="true" cascade="all">
            <!--<cache usage="transactional"/>-->
            <key column="IdOfPerson"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Client"/>
        </set>
        <set name="visitorsInternal" inverse="true" cascade="all" lazy="true">
            <key column="IdOfPerson"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Visitor"/>
        </set>
        <set name="contractClientsInternal" inverse="true" cascade="all">

            <key column="IdOfContractPerson"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Client"/>
        </set>
    </class>
</hibernate-mapping>


