<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.HardwareSettingsReaders"
           table="CF_Hardware_Settings_Readers">
        <id name="idOfReader" column="IdOfReader" type="long">
            <generator class="sequence">
                <param name="sequence">cf_hardwaresettings_idofhardwaresetting_readers_seq</param>
            </generator>
        </id>
        <many-to-one name="hardwareSettings" class="ru.axetta.ecafe.processor.core.persistence.HardwareSettings"
                     not-null="true">
            <column name="IdOfOrg"/>
            <column name="IdOfHardwareSetting"/>
        </many-to-one>
        <property name="usedByModule" column="UsedByModule" type="integer" not-null="true"/>
        <property name="readerName" column="ReaderName" type="string" not-null="true" length="64"/>
        <property name="firmwareVer" column="FirmwareVer" type="string" length="64"/>
        <property name="lastUpdateForReader" column="LastUpdateForReader"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
    </class>
</hibernate-mapping>