<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.PreorderComplex" table="cf_preorder_complex">
        <id name="idOfPreorderComplex" column="IdOfPreorderComplex" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfPreorderComplex</param>
                <param name="max_lo">8</param>
            </generator>
        </id>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client"
                     column="IdOfClient" not-null="true" fetch="select"/>
        <property name="version" column="version" type="long" not-null="true"/>
        <property name="armComplexId" column="armcomplexid" type="integer"/>
        <property name="amount" column="amount" type="integer"/>
        <property name="preorderDate" column="preorderDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="deletedState" column="deletedState" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <property name="guid" column="guid" type="string" length="36" not-null="true"/>
        <property name="usedSum" column="usedsum" type="long" not-null="true"/>
        <property name="usedAmount" column="usedamount" type="long" not-null="true"/>
        <property name="complexName" column="complexname" type="string" length="60"/>
        <property name="complexPrice" column="complexprice" type="long"/>
        <property name="createdDate" column="createddate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lastUpdate" column="lastupdate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <set name="preorderMenuDetails" inverse="true" cascade="all">
            <key column="idOfPreorderComplex"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.PreorderMenuDetail"/>
        </set>
        <property name="state" column="state">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.PreorderState</param>
            </type>
        </property>
        <property name="idOfGoodsRequestPosition" column="idofgoodsrequestposition" type="long" />
    </class>
</hibernate-mapping>
