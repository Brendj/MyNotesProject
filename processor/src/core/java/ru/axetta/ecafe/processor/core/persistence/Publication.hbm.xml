<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Publication" table="CF_Publications">
        <composite-id name="compositeIdOfPublication" class="ru.axetta.ecafe.processor.core.persistence.CompositeIdOfPublication">
            <key-property name="idOfPublication" type="long" column="idOfPublication"/>
            <key-property name="idOfOrg" type="long" column="IdOfOrg"/>
        </composite-id>
        <property name="recordStatus" column="RecordStatus" type="string" length="1" not-null="true"/>
        <property name="recordType" column="RecordType" type="string" length="1" not-null="true"/>
        <property name="bibliographicLevel" column="BibliographicLevel" type="string" length="1" not-null="true"/>
        <property name="hierarchicalLevel" column="HierarchicalLevel" type="string" length="1" not-null="true"/>
        <property name="codingLevel" column="CodingLevel" type="string" length="1" not-null="true"/>
        <property name="formOfCatalogingDescription" column="formOfCatalogingDescription" type="string" length="1" not-null="true"/>
        <property name="data" column="Data" type="string" not-null="false"/>
        <property name="author" column="Author" type="string" length="255" not-null="false"/>
        <property name="title" column="Title" type="string" length="512" not-null="false"/>
        <property name="title2" column="Title2" type="string" length="255" not-null="false"/>
        <property name="publicationdate" column="PublicationDate" type="string" length="15" not-null="false"/>
        <property name="publisher" column="Publisher" type="string" length="255" not-null="false"/>
        <property name="version" column="Version" type="long" not-null="true"/>
    </class>
</hibernate-mapping>