<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.GoodRequestPosition" table="cf_goods_requests_positions">
        <id name="globalId" column="IdOfGoodsRequestPosition" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <property name="globalVersion" column="GlobalVersion" type="long"/>

        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="guid" column="GUID" type="string" length="36" not-null="true" unique="true"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
        not-null="true" update="false"/>
        <!-- End Global params -->

        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="unitsScale" column="UnitsScale" type="integer"/>
        <property name="totalCount" column="TotalCount" type="long"/>
        <property name="netWeight" column="NetWeight" type="long"/>

        <many-to-one name="goodRequest" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.GoodRequest" fetch="select" lazy="false">
            <column name="IdOfGoodsRequest" not-null="true" />
        </many-to-one>

        <many-to-one name="good" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.Good" fetch="select" lazy="false">
            <column name="IdOfGood" not-null="true" />
        </many-to-one>

        <many-to-one name="product" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.Product" fetch="select" lazy="false">
            <column name="IdOfProducts" not-null="true" />
        </many-to-one>

    </class>
</hibernate-mapping>