<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Migrant" table="cf_migrants">
        <composite-id name="compositeIdOfMigrant" class="ru.axetta.ecafe.processor.core.persistence.CompositeIdOfMigrant">
            <key-property name="idOfOrgRegistry" type="long" column="IdOfOrgRegistry"/>
            <key-property name="idOfRequest" type="long" column="IdOfRequest"/>
        </composite-id>
        <many-to-one name="orgRegistry" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrgRegistry"
                     not-null="true" insert="false" update="false"/>
        <many-to-one name="orgRegVendor" class="ru.axetta.ecafe.processor.core.persistence.Contragent" column="IdOfOrgRegVendor"
                     not-null="true"/>
        <many-to-one name="clientMigrate" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClientMigrate"
                     not-null="true"/>
        <many-to-one name="orgVisit" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrgVisit"
                     not-null="true"/>
        <property name="visitStartDate" column="VisitStartDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="visitEndDate" column="VisitEndDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="syncState" column="SyncState" type="integer" not-null="true"/>
    </class>
</hibernate-mapping>


