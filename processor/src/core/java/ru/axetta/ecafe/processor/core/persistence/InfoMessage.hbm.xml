<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.InfoMessage" table="cf_info_messages">
        <id name="idOfInfoMessage" column="IdOfInfoMessage" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfInfoMessage</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <property name="header" column="Header" type="string" length="128" not-null="true"/>
        <property name="content" column="Content" type="string" not-null="true"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="version" column="Version" type="long" not-null="true"/>
        <many-to-one name="user" class="ru.axetta.ecafe.processor.core.persistence.User" column="IdOfUser"
                     not-null="false" update="false" />
        <set name="infoMessageDetails" inverse="true" cascade="all">
            <key>
                <column name="IdOfInfoMessage"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.InfoMessageDetail"/>
        </set>
    </class>
</hibernate-mapping>


