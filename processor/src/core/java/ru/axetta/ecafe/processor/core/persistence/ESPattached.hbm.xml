<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ESPattached" table="cf_esp_attached">
        <id name="idespattached" column="idespattached" type="long">
            <generator class="sequence">
                <param name="sequence">cf_esp_attached_id</param>
            </generator>
        </id>
        <many-to-one name="esp" class="ru.axetta.ecafe.processor.core.persistence.ESP" column="idesprequest"
                     not-null="true" update="false"/>
        <property name="path" column="path" type="string"/>
        <property name="number" column="number" type="integer"/>
        <property name="createDate" column="createDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
    </class>
</hibernate-mapping>


