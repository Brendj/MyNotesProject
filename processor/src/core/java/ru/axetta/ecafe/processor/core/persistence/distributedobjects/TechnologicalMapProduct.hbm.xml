<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.TechnologicalMapProduct" table="cf_technological_map_products" optimistic-lock="version">
        <id name="globalId" column="IdOfTechnoMapProducts" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <version name="globalVersion" column="GlobalVersion" type="long"/>
        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <!-- End Global params -->

        <property name="nameOfProduct" column="NameOfProduct" type="string" length="256"/>
        <property name="grossMass" column="GrossMass" type="float" />
        <property name="netMass" column="NetMass" type="float" />

    </class>
</hibernate-mapping>
