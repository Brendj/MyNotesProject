<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.InternalDisposingDocument" table="cf_internal_disposing_documents">
        <id name="globalId" column="IdOfInternalDisposingDocument" type="long">
            <generator class="identity"/>
        </id>
        <!-- Begin Global params -->
        <property name="globalVersionOnCreate" column="GlobalVersionOnCreate" type="long"/>
        <property name="globalVersion" column="GlobalVersion" type="long"/>
        <property name="deletedState" column="DeletedState" type="boolean"/>

        <property name="guid" column="GUID" type="string" length="36" not-null="true" unique="true"/>

        <property name="lastUpdate" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="deleteDate" column="DeleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="createdDate" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
        not-null="true" update="false"/>
        <property name="sendAll" column="SendAll">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.distributedobjects.SendToAssociatedOrgs</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <!-- End Global params -->

        <property name="orgOwner" column="OrgOwner" type="long"/>
        <property name="type" column="TypeOfInternalDisposingDocument" type="integer" not-null="true"/>
        <property name="date" column="DateOfInternalDisposingDocument" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="state" column="State" type="integer" not-null="true"/>
        <property name="comments" column="Comments" type="string" length="1024" not-null="true"/>

        <many-to-one name="staff" fetch="join" lazy="false" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.Staff">
            <column name="IdOfStaff" not-null="false" />
        </many-to-one>

        <many-to-one name="actOfInventarization" fetch="join" lazy="false" class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.ActOfInventarization">
            <column name="IdOfActOfInventarization" not-null="false" />
        </many-to-one>

        <set name="stateChangeInternal" lazy="true" inverse="true">
            <key>
                <column name="IdOfInternalDisposingDocument"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.StateChange" />
        </set>

        <set name="internalIncomingDocumentInternal" lazy="true" inverse="true">
            <key>
                <column name="IdOfInternalDisposingDocument"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.InternalIncomingDocument" />
        </set>

        <set name="internalDisposingDocumentPositionInternal" lazy="true" inverse="true">
            <key>
                <column name="IdOfInternalDisposingDocument"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.distributedobjects.documents.InternalDisposingDocumentPosition" />
        </set>


    </class>
</hibernate-mapping>
