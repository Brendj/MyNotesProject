<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.CardRequest" table="cf_card_requests">
        <id name="idOfCardRequest" column="IdOfCardRequest" type="long">
            <generator class="identity"/>
        </id>
        <property name="typeCard" column="typeCard" type="integer" not-null="true"/>
        <property name="createdDate" column="createdDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="cardIssueDate" column="cardIssueDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <property name="deletedState" column="deletedState" type="ru.axetta.ecafe.processor.core.persistence.BoolType"/>
        <property name="mobile" column="mobile" type="string" length="32" not-null="false"/>
        <property name="version" column="version" type="long" not-null="true"/>
        <property name="deleteDate" column="deleteDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="false"/>
        <property name="guid" column="guid" type="string" length="36" not-null="false"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient" not-null="true"/>
        <many-to-one name="card" class="ru.axetta.ecafe.processor.core.persistence.Card" column="IdOfCard"/>
    </class>
</hibernate-mapping>


