<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtTypeOfProductionItem" 
           table="cf_wt_typeofproduction_items">
        <cache usage="transactional"/>
        <id name="idOfTypeProductionItem">
            <column name="idoftypeproductionitem" sql-type="long"/>
        </id>

        <property name="description">
            <column name="description" sql-type="varchar(255)" length="255"/>
        </property>

        <property name="version">
            <column name="version" sql-type="long"/>
        </property>

        <set name="wtDishes" inverse="true" cascade="all" lazy="true">
            <key>
                <column name="idOfDish"/>
            </key>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtDish"/>
        </set>

    </class>
</hibernate-mapping>