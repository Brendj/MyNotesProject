<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.RuleCondition" table="CF_RuleConditions">
        <id name="idOfRuleCondition" column="IdOfRuleCondition" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">pooled-lo</param>
                <param name="increment_size">3</param>
                <param name="sequence_name">CF_RuleConditions_Id_Gen_seq</param>
            </generator>
        </id>
        <many-to-one name="reportHandleRule" class="ru.axetta.ecafe.processor.core.persistence.ReportHandleRule"
                     column="IdOfReportHandleRule" not-null="true" update="false"/>
        <property name="conditionOperation" column="ConditionOperation" type="int" not-null="true"/>
        <property name="conditionArgument" column="ConditionArgument" type="string" length="128"/>
        <property name="conditionConstant" column="ConditionConstant" type="string" length="25000"/>
    </class>
</hibernate-mapping>


