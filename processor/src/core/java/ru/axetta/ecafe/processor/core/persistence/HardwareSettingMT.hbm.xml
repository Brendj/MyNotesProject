<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.HardwareSettingsMT" table="CF_Hardware_Settings_Mt">
        <id name="idOfModuleType" column="idOfModuleType" type="long">
            <generator class="sequence">
                <param name="sequence">cf_hardwaresettings_idofhardwaresetting_mt_seq</param>
            </generator>
        </id>
        <many-to-one name="hardwareSettings" class="ru.axetta.ecafe.processor.core.persistence.HardwareSettings" not-null="true">
            <column name="IdOfOrg"/>
            <column name="ipHost"/>
        </many-to-one>
        <property name="moduleType" column="ModuleType" type="integer" not-null="true"/>
        <property name="installStatus" column="InstallStatus" type="integer" not-null="true"/>
        <property name="lastUpdate" column="LastUpdate"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" length="64" update="true"/>
        <property name="readerName" column="ReaderName" type="string" not-null="true" length="64"/>
        <property name="firmwareVer" column="FirmwareVer" type="string" length="64"/>
    </class>
</hibernate-mapping>