<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ClientPhoto" table="cf_clientphoto" optimistic-lock="version">

        <id name="idOfClient" column="IdOfClient" type="long">
            <generator class="foreign">
                <param name="property">client</param>
            </generator>
        </id>
        <one-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" constrained="true"/>
        <property name="name" column="name" type="string" not-null="true"/>
        <property name="isNew" column="isnew" type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
    </class>
</hibernate-mapping>


