<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtComplexesItem" table="cf_wt_complexes_items">
        <cache usage="transactional"/>
        <id name="idOfComplexItem">
            <column name="idofcomplexitem" sql-type="long"/>
        </id>
        <property name="cycleDay">
            <column name="cycle_day" sql-type="integer"/>
        </property>
        <property name="countDishes">
            <column name="count_dishes" sql-type="integer" not-null="true"/>
        </property>
        <many-to-one name="wtComplex" class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtComplex">
            <column name="idofcomplex"/>
        </many-to-one>
        <set name="dishes" table="cf_wt_complex_items_dish">
            <key column="idOfComplexItem"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtDish" column="idOfDish"/>
        </set>
    </class>
</hibernate-mapping>