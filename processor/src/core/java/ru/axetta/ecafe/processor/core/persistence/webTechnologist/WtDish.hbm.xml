<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtDish" table="cf_wt_dishes">
        <cache usage="transactional"/>
        <id name="idOfDish">
            <column name="idofdish" sql-type="long"/>
        </id>

        <property name="dishName">
            <column name="dishName" sql-type="varchar(128)" length="128"/>
        </property>

        <property name="componentsOfDish">
            <column name="componentsOfDish" sql-type="varchar(512)" length="512"/>
        </property>

        <property name="code">
            <column name="code" sql-type="varchar(32)" length="32"/>
        </property>

        <property name="price">
            <column name="price" sql-type="numeric(10,2)"/>
        </property>

        <property name="dateOfBeginMenuIncluding">
            <column name="dateOfBeginMenuIncluding" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType" />
        </property>

        <property name="dateOfEndMenuIncluding">
            <column name="dateOfEndMenuIncluding" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType" />
        </property>

        <property name="createDate">
            <column name="createDate" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true" />
        </property>

        <property name="lastUpdate">
            <column name="lastUpdate" sql-type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true" />
        </property>

        <property name="version">
            <column name="version" sql-type="long"/>
        </property>

        <property name="deleteState">
            <column name="deleteState" sql-type="integer"/>
        </property>

        <many-to-one name="createdUser" class="ru.axetta.ecafe.processor.core.persistence.User">
            <column name="create_by_id"/>
        </many-to-one>

        <property name="guid">
            <column name="guid" sql-type="varchar(36)" length="36"/>
        </property>

        <many-to-one name="wtAgeGroupItem" lazy="proxy" class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtAgeGroupItem">
            <column name="idOfAgeGroupItem"/>
        </many-to-one>

        <many-to-one name="wtTypeProductionItem" lazy="proxy" class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtTypeOfProductionItem">
            <column name="idOfTypeOfProductionItem"/>
        </many-to-one>

        <many-to-one name="updatedUser" class="ru.axetta.ecafe.processor.core.persistence.User">
            <column name="update_by_id"/>
        </many-to-one>

        <property name="protein">
            <column name="protein" sql-type="integer"/>
        </property>

        <property name="fat">
            <column name="fat" sql-type="integer"/>
        </property>

        <property name="carbohydrates">
            <column name="carbohydrates" sql-type="integer"/>
        </property>

        <property name="calories">
            <column name="calories" sql-type="integer"/>
        </property>

        <property name="qty">
            <column name="qty" sql-type="integer"/>
        </property>

        <many-to-one name="contragent" lazy="proxy" class="ru.axetta.ecafe.processor.core.persistence.Contragent">
            <column name="idOfContragent"/>
        </many-to-one>

        <property name="barcode">
            <column name="barcode" sql-type="varchar(16)" length="16"/>
        </property>

        <set name="complexItems" lazy="true" table="cf_wt_complex_items_dish">
            <key column="idOfDish"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtComplexesItem" column="idOfComplexItem"/>
        </set>

        <set name="categoryItems" lazy="true" table="cf_wt_dish_categoryitem_relationships">
            <key column="idOfDish"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtCategoryItem" column="idOfCategoryItem"/>
        </set>

        <set name="menuGroupMenus" lazy="true" table="cf_wt_menu_group_dish_relationships">
            <key column="idOfDish"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtMenuGroupMenu" column="idOfMenuMenuGroupRelation"/>
        </set>

        <set name="groupItems" lazy="true" table="cf_wt_dish_groupitem_relationships">
            <key column="idOfDish"/>
            <many-to-many class="ru.axetta.ecafe.processor.core.persistence.webTechnologist.WtGroupItem" column="idOfGroupItem"/>
        </set>

    </class>
</hibernate-mapping>