<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Circulation" table="CF_Circulations">
        <composite-id name="compositeIdOfCirculation" class="ru.axetta.ecafe.processor.core.persistence.CompositeIdOfCirculation">
            <key-property name="idOfCirculation" type="long" column="idOfCirculation"/>
            <key-property name="idOfOrg" type="long" column="IdOfOrg"/>
        </composite-id>
        <property name="idOfPublication" column="IdOfPublication" type="long" not-null="true" update="false"/>
        <many-to-one name="publication" class="ru.axetta.ecafe.processor.core.persistence.Publication" not-null="true"
                     insert="false"
                     update="false">
            <column name="idOfPublication"/>
            <column name="IdOfOrg"/>
        </many-to-one>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"
                     not-null="true" update="false" fetch="join"/>
        <property name="issuanceDate" column="IssuanceDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="refundDate" column="RefundDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="realRefundDate" column="RealRefundDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="false"/>
        <property name="status" column="Status" type="integer" not-null="true"/>
        <property name="version" column="Version" type="long" not-null="true"/>
    </class>
</hibernate-mapping>