<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.OrgEquipment" table="CF_Hardware_Settings">
        <id name="idOfHardwareSetting" column="IdOfHardwareSetting" type="long">
            <generator class="sequence">
                <param name="sequence">cf_hardwaresettings_idofhardwaresetting_seq</param>
            </generator>
        </id>
        <property name="moduleType" column="ModuleType" type="integer" not-null="true"/>
        <property name="installStatus" column="InstallStatus" type="integer" not-null="true"/>
        <property name="lastUpdateForModuleType" column="LastUpdateForModuleType"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" length="64" update="true"/>
        <property name="ipHost" column="IPHost" type="string" length="64" not-null="true"/>
        <property name="lastUpdateForIPHost" column="LastUpdateForIPHost"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="dotNetVer" column="DotNetVer" type="string" length="64" not-null="true"/>
        <property name="lastUpdateForDotNetVer" column="LastUpdateForDotNetVer"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="oSVer" column="OSVer" type="string" length="64" not-null="true"/>
        <property name="lastUpdateForOSVer" column="LastUpdateForOSVer"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="ramSize" column="RAMSize" type="string" length="64" not-null="true"/>
        <property name="lastUpdateForRAMSize" column="LastUpdateForRAMSize"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="cpuHost" column="CPUHost" type="string" length="64" not-null="true"/>
        <property name="lastUpdateForCPUHost" column="LastUpdateForCPUHost"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="readerUsedByModule" column="ReaderUsedByModule" type="integer" not-null="true"/>
        <property name="readerName" column="ReaderName" type="string" not-null="true" length="64"/>
        <property name="firmwareVer" column="FirmwareVer" type="string" length="64"/>
        <property name="lastUpdateReader" column="LastUpdateReader"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="turnstileId" column="TurnstileId" type="string" length="64" not-null="true"/>
        <property name="controllerModel" column="ControllerModel" type="string" length="64"/>
        <property name="controllerFirmwareVersion" column="ControllerFirmwareVersion" type="string" length="64"/>
        <property name="workWithLongIds" column="IsWorkWithLongIds"
                  type="ru.axetta.ecafe.processor.core.persistence.BoolType" not-null="true"/>
        <property name="lastUpdateForTurnstile" column="LastUpdateForTurnstile"
                  type="ru.axetta.ecafe.processor.core.persistence.DateType" not-null="true"/>
        <property name="version" column="Version" type="long"/>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org">
            <column name="idOfOrg"/>
        </many-to-one>
    </class>
</hibernate-mapping>