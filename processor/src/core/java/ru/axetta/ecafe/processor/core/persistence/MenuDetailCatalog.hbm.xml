<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.MenuDetailCatalog" table="CF_MenuDetails_Catalog">
        <id name="idOfMenuDetailsCatalog" column="IdOfMenuDetailsCatalog" type="long">
            <generator class="identity"/>
        </id>
        <property name="name" column="Name" type="string" length="90" not-null="true" update="true"/>
        <many-to-one name="menu" class="ru.axetta.ecafe.processor.core.persistence.Menu" column="IdOfMenu"
                     not-null="true"
                     update="false"/>
        <property name="path" column="Path" type="string" not-null="true" update="true"/>
        <property name="localIdOfMenu" column="LocalIdOfMenu" type="long"/>
    </class>
</hibernate-mapping>


