<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.Card" table="CF_Cards" optimistic-lock="version">
        <id name="idOfCard" column="IdOfCard" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfCard</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <version name="version" column="Version" type="long"/>
        <many-to-one name="client" class="ru.axetta.ecafe.processor.core.persistence.Client" column="IdOfClient"/>
        <many-to-one name="visitor" class="ru.axetta.ecafe.processor.core.persistence.Visitor" column="IdOfVisitor"/>
        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="idoforg"/>
        <property name="cardNo" column="CardNo" type="long" not-null="true" unique="true"/>
        <property name="longCardNo" column="longCardNo" type="long" not-null="true"/>
        <property name="cardType" column="CardType" type="integer" not-null="true"/>
        <property name="createTime" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="updateTime" column="LastUpdate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="state" column="State" type="integer" not-null="true"/>
        <property name="lockReason" column="LockReason" type="string" length="64"/>
        <property name="validTime" column="ValidDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true"/>
        <property name="issueTime" column="IssueDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
        <property name="lifeState" column="LifeState" type="integer" not-null="true"/>
        <property name="cardPrintedNo" column="CardPrintedNo" type="long" update="false"/>
        <property name="externalId" column="ExternalId" type="string" length="32"/>
        <property name="cardSignCertNum" column="CardSignCertNum" type="integer" />
        <one-to-one name="meshCardClientRef" class="ru.axetta.ecafe.processor.core.persistence.MeshClientCardRef" cascade="all-delete-orphan"/>
        <set name="transactionsInternal" inverse="true" cascade="all">
            <key column="IdOfCard"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction"/>
        </set>
        <set name="ordersIntenal" inverse="true" cascade="all">
            <key column="IdOfCard"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.Order"/>
        </set>
        <set name="historyCardsInternal" inverse="true" cascade="all">
            <key column="IdOfCard"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.HistoryCard"/>
        </set>
        <property name="isLongUid" column="IsLongUid" type="boolean"/>
        <property name="transitionState" column="transitionstate" type="integer" not-null="true"/>
        <set name="cardsync" inverse="true" cascade="all">
            <key column="idofcard"/>
            <one-to-many class="ru.axetta.ecafe.processor.core.persistence.CardSync"/>
        </set>
    </class>
</hibernate-mapping>


