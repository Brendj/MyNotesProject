<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.TaloonApproval" table="CF_Taloon_Approval">

        <id name="idOfTaloonApproval" column="idOfTaloonApproval" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfTaloonApproval</param>
                <param name="max_lo">64</param>
            </generator>
        </id>
        <property name="idOfOrg" column="IdOfOrg" type="long" not-null="true"/>
        <property name="idOfOrgCreated" column="IdOfOrgCreated" type="long" not-null="false"/>
        <property name="taloonDate" type="ru.axetta.ecafe.processor.core.persistence.DateType" column="taloonDate"/>
        <property name="taloonName" type="string" column="taloonName"/>
        <property name="goodsGuid" type="string" column="goodsGuid" />

        <property name="soldedQty" column="SoldedQty" type="integer" not-null="true"/>
        <property name="requestedQty" column="RequestedQty" type="integer" not-null="false"/>
        <property name="shippedQty" column="ShippedQty" type="integer" not-null="false"/>
        <property name="price" column="Price" type="long" not-null="true"/>
        <property name="goodsName" column="GoodsName" type="string"/>
        <property name="remarks" column="Remarks" type="string" length="1024"/>

        <property name="createdType" column="CreatedType">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.TaloonCreatedTypeEnum</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="isppState" column="ISPP_State">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.TaloonISPPStatesEnum</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="ppState" column="PP_State">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.axetta.ecafe.processor.core.persistence.TaloonPPStatesEnum</param>
                <param name="type">4</param> <!-- http://docs.oracle.com/javase/6/docs/api/constant-values.html#java.sql.Types.INTEGER -->
            </type>
        </property>
        <property name="taloonNumber" column="TaloonNumber" type="long" not-null="false"/>
        <property name="version" column="Version" type="long" not-null="true"/>
        <property name="deletedState" column="DeletedState" type="boolean" not-null="true"/>
        <property name="complexId" column="complexId" type="long"/>
        <property name="byWebSupplier" column="byWebSupplier" type="boolean" not-null="true"/>

        <many-to-one name="org" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrg" not-null="true"
                     insert="false" update="false"/>
        <many-to-one name="orgOwner" class="ru.axetta.ecafe.processor.core.persistence.Org" column="IdOfOrgOwner" not-null="true"/>
    </class>
</hibernate-mapping>


