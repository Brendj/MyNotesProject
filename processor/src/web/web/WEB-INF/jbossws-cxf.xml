            <bean class="ru.axetta.ecafe.processor.web.util.ClientRoomControllerLoggingInterceptor"/>
        </jaxws:inInterceptors>
        <jaxws:outInterceptors>
            <bean class="ru.axetta.ecafe.processor.web.util.ClientRoomControllerLoggingOutInterceptor"/>
        </jaxws:outInterceptors>
