<?xml version="1.0" encoding="UTF-8"?>
<project name="processor" >

    <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
        <classpath>
            <fileset dir="../lib" includes="*.jar"/>
            <fileset dir="../lib/tools" includes="*.jar"/>
        </classpath>
    </taskdef>

    <property name="generatedSrcDest"  location="../../src/core/java"/>

    <target name="gen_nfp" description="">
        <mkdir dir="${generatedSrcDest}"/>
        <wsimport
            keep="true"
            destdir="${generatedSrcDest}"
            extension="true"
            wsdl="http://193.47.154.34:7002/uec-service-war/TransactionService?wsdl">
            <binding file="tools/nfp.xml"/>
            <binding file="tools/nfp_jaxb.xml"/>
        </wsimport>

    </target>


    <target name="gen_paymentws" description="">
        <wsimport
                package="ru.axetta.soap.test"
            keep="true"
            destdir="../../src/web/test"
            extension="true"
            wsdl="http://localhost:8080/processor/soap/payment?wsdl">
        </wsimport>

    </target>


    <target name="gen_teralectws" description="">
        <wsimport
                package="generated.ru.teralect"
            keep="true"
            destdir="${generatedSrcDest}"
            extension="true"
            wsdl="http://sms.teralect.ru:13700/">
            <binding file="tools/simple_jaxb.xml"/>
        </wsimport>

    </target>


    <target name="gen_msknsiws" description="">
        <wsimport
                package="generated.nsiws"
            keep="true"
            destdir="${generatedSrcDest}"
            extension="true"
            wsdl="http://10.126.216.2:2000/nsiws/services/NSIService?wsdl">
            <binding file="tools/nsiws_jaxb.xml"/>
        </wsimport>
    </target>
    <!-- после генерации необходимо в AppDataType добавить
        @XmlElement(name = "generalResponse", namespace = "http://rstyle.com/nsi/beans")
        перед     protected GeneralResponse generalResponse;
    -->

</project>