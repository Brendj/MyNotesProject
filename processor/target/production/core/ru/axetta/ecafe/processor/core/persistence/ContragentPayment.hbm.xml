<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.axetta.ecafe.processor.core.persistence.ContragentPayment" table="CF_ContragentPayments">
        <id name="idOfContragentPayment" column="IdOfContragentPayment" type="long">
            <generator class="hilo">
                <param name="table">CF_Generators</param>
                <param name="column">IdOfContragentPayment</param>
                <param name="max_lo">3</param>
            </generator>
        </id>
        <many-to-one name="contragent" class="ru.axetta.ecafe.processor.core.persistence.Contragent"
                     column="IdOfContragent"
                     not-null="true" update="false"/>
        <many-to-one name="transaction" class="ru.axetta.ecafe.processor.core.persistence.AccountTransaction"
                     column="IdOfTransaction" not-null="true" update="false"/>
        <property name="paySum" column="PaySum" type="long" not-null="true" update="false"/>
        <property name="payType" column="PayType" type="integer" not-null="true" update="false"/>
        <property name="state" column="State" type="integer" not-null="true"/>
        <property name="createTime" column="CreatedDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"
                  not-null="true" update="false"/>
        <property name="paymentTime" column="PaymentDate" type="ru.axetta.ecafe.processor.core.persistence.DateType"/>
    </class>
</hibernate-mapping>


